<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar" />

    <!--content-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/first_line_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical">

            <TableRow>

                <TextView
                    style="@style/Label"
                    android:layout_marginRight="@dimen/first_line_margin"
                    android:text="@string/normal_image" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="@dimen/avatar_small_size"
                    android:layout_height="@dimen/avatar_small_size"
                    android:src="@drawable/avatar" />
            </TableRow>

            <TableRow android:layout_marginTop="@dimen/first_line_margin">

                <TextView
                    style="@style/Label"
                    android:layout_marginRight="@dimen/first_line_margin"
                    android:text="@string/rounded_image" />

                <ImageView
                    android:id="@+id/ivRound"
                    android:layout_width="@dimen/avatar_small_size"
                    android:layout_height="@dimen/avatar_small_size"
                    android:src="@drawable/avatar" />
            </TableRow>

            <TableRow android:layout_marginTop="@dimen/first_line_margin">

                <TextView
                    style="@style/Label"
                    android:layout_marginRight="@dimen/first_line_margin"
                    android:text="@string/touched_image" />

                <ImageView
                    android:id="@+id/ivTouched"
                    android:layout_width="@dimen/avatar_small_size"
                    android:layout_height="@dimen/avatar_small_size"
                    android:src="@drawable/avatar" />
            </TableRow>

            <TableRow android:layout_marginTop="@dimen/first_line_margin">

                <TextView
                    style="@style/Label"
                    android:layout_marginRight="@dimen/first_line_margin"
                    android:text="@string/shader" />

                <ImageView
                    android:id="@+id/ivMerge"
                    android:layout_width="@dimen/avatar_small_size"
                    android:layout_height="@dimen/avatar_small_size"
                    android:src="@drawable/avatar" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>